<p id="notice"><%= notice %></p>

<h1>Faqs</h1>

<%= form_tag faqs_path, :method => :get do %>
    <%= text_field_tag :search, params[:search], :placeholder => '検索' %>
    <%= submit_tag 'Search', :name => nil %>
<% end %>

<table>
  <thead>
    <tr>
      <th>Staff</th>
      <th>Question</th>
      <th>Answer</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @faqs.each do |faq| %>
      <tr>
        <td><%= faq.staff %></td>
        <td><%= faq.question %></td>
        <td><%= faq.answer %></td>
        <td><%= link_to 'Show', faq %></td>
        <td><%= link_to 'Edit', edit_faq_path(faq) %></td>
        <td><%= link_to 'Destroy', faq, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Faq', new_faq_path %>
